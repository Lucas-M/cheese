<div class="btn-group" role="group" aria-label="Basic example">
  <%= link_to 'Home', "/greetings/hello", :class => "btn btn-primary", :style=>"color:#FFFFFF;" %> 
  <%= link_to 'Cheeses', "/items", :class => "btn btn-primary", :style=>"color:#FFFFFF;" %>
  <%= link_to 'Posts', "/posts", :class => "btn btn-primary", :style=>"color:#FFFFFF;" %>
</div>

<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.content %></td>
        <td><%= post.price %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
